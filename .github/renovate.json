{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch"
  ],
  "schedule": [
    "before 4am on monday"
  ],
  "timezone": "UTC",
  "labels": [
    "dependencies"
  ],
  "assignees": [],
  "reviewers": [],
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates for non-critical dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "matchPackageNames": [
        "!@modelcontextprotocol/sdk",
        "!playwright",
        "!typescript",
        "!@typescript-eslint/eslint-plugin",
        "!@typescript-eslint/parser"
      ]
    },
    {
      "description": "Group all non-major dependency updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "!@modelcontextprotocol/sdk",
        "!playwright",
        "!typescript",
        "!@typescript-eslint/eslint-plugin",
        "!@typescript-eslint/parser"
      ]
    },
    {
      "description": "Critical dependencies - manual review required",
      "matchPackageNames": [
        "@modelcontextprotocol/sdk",
        "playwright",
        "typescript",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "critical"
      ],
      "reviewers": [],
      "assignees": []
    },
    {
      "description": "Major updates always require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "major-update"
      ],
      "reviewers": [],
      "assignees": []
    },
    {
      "description": "Group devDependencies patches/minors together",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "devDependencies (non-major)",
      "groupSlug": "dev-dependencies",
      "matchPackageNames": [
        "!playwright",
        "!typescript",
        "!@typescript-eslint/eslint-plugin",
        "!@typescript-eslint/parser"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ],
    "assignees": [],
    "reviewers": []
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 4am on monday"
    ]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "commitMessagePrefix": "chore:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prBodyTemplate": "This PR contains the following updates:\n\n| Package | Type | Update | Change |\n|---------|------|--------|---------|\n{{#each upgrades as |upgrade|}}\n| {{upgrade.depName}} | {{upgrade.depType}} | {{upgrade.updateType}} | `{{upgrade.currentVersion}}` â†’ `{{upgrade.newVersion}}` |\n{{/each}}\n\n---\n\n### Release Notes\n{{#each upgrades as |upgrade|}}\n{{#if upgrade.hasReleaseNotes}}\n<details>\n<summary>{{upgrade.depName}}</summary>\n\n{{upgrade.releaseNotes}}\n</details>\n{{/if}}\n{{/each}}\n\n---\n\nðŸ¤– This PR has been generated by Renovate Bot.",
  "baseBranches": [
    "master"
  ]
}
