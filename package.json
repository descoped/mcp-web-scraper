{
  "name": "mcp-web-scraper",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP-compliant web scraper with advanced cookie consent handling",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "dev": "tsc && tsc-alias && node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts tests/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts tests/**/*.ts",
    "lint:full": "npm run lint && npm run type-check",
    "pre-commit": "npm run lint:full",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:consent": "./scripts/test_cookie_consent.sh QUICK",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:consent",
    "test:verbose": "VERBOSE=true vitest run --reporter=verbose",
    "validate:quick": "npx tsx tests/run-system-validation.ts --verbose --regions=scandinavian --max-domains=1 --max-articles=2 --validate-only",
    "validate:medium": "npx tsx tests/run-system-validation.ts --verbose --regions=scandinavian --max-domains=3 --max-articles=3 --validate-only",
    "validate:full": "npx tsx tests/run-system-validation.ts --verbose --regions=scandinavian --full-pipeline",
    "validate:status": "npx tsx tests/run-system-validation.ts --status"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chokidar": "^1.7.5",
    "@types/js-yaml": "^4.0.9",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "js-yaml": "^4.1.0",
    "playwright": "^1.52.0",
    "turndown": "^7.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.5",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.28.0",
    "glob": "^11.0.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.5.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.0"
  },
  "private": true
}
